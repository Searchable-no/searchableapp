// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  connections   Connection[]
  indexedContent IndexedContent[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Connection {
  id            String    @id @default(cuid())
  provider      String    // "microsoft" or "google"
  accessToken   String    @db.Text
  refreshToken  String    @db.Text
  expiresAt     DateTime
  user          User      @relation(fields: [userId], references: [id])
  userId        String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@unique([userId, provider])
  @@index([userId])
}

model IndexedContent {
  id            String    @id @default(cuid())
  sourceId      String    // Original ID from Microsoft/Google
  title         String
  content       String    @db.Text
  url           String?
  type          String    // 'email' | 'document'
  source        String    // 'microsoft' | 'google'
  lastModified  DateTime
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@unique([userId, sourceId], name: "userId_sourceId")
  @@index([userId])
  @@index([sourceId])
} 